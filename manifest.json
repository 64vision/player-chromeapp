{
  "manifest_version": 2,
  "name": "Rise Chrome App Player - QA",
  "description": "FREE Digital Signage Player for Google Chrome",
  "author":  {
 	"email": "support@risevision.com"
 	},
  "version": "1.24.21",
  "icons": {
	"16": "icon_16.png",
	"128": "icon_128.png"
  },
  "app": {
	"background": {
	  "scripts": ["main.js"]
	}
  },
  "kiosk_enabled": true,
  "permissions": [
    "app.window",
	"<all_urls>",
	"fileSystem",
	"fullscreen",
	"geolocation",
	"power",
	"storage",
	"unlimitedStorage",
	"webview",
	"system.display",
	"serial",
	{ "socket" : ["tcp-listen"] }
  ]
}